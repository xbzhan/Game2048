<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帮助"
        android:textSize="32dp"
        android:layout_above="@+id/game4x4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4*4模式"
        android:textSize="32dp"
        android:id="@+id/game4x4"
        android:layout_above="@+id/game5x5"
        android:layout_alignLeft="@+id/game5x5"
        android:layout_alignStart="@+id/game5x5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5*5模式"
        android:textSize="32dp"
        android:id="@+id/game5x5"
        android:layout_above="@+id/game4x4_0"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4*4+1模式"
        android:textSize="32dp"
        android:id="@+id/game4x4_0"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="169dp" />
</RelativeLayout>